@using System.Diagnostics.Eventing.Reader
@using Models
@model List<Artiest>
@{
    ViewBag.Title = "AllArtiest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-9">
                <h3>
                    alle artiesten
                </h3>
            </div>
        </div>
        <div id="carousel-example" class="carousel slide hidden-xs" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <div class="row">
                        @foreach (var a in Model)
                        {
                            <div class="col-sm-3">
                                <div class="col-item">
                                    <div class="photo">
                                        <img src="@Url.Content(a.Photo)" class="img-responsive" alt="a" />
                                    </div>
                                    <div class="info">
                                        <div class="row">
                                            <div class="price col-md-6">
                                                <p>
                                                    @a.Naam <br />
                                                    @a.Genre <br />
                                                    @Html.ActionLink("Bekijk de nummers", "NummerVanArtiest", new { artiestid = a.ArtiestID, controller = "Artiest" })
                                                </p>
                                            </div>
                                        </div>
                                        <div class="clearfix">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


